{
  "name": "svz-accordion",
  "version": "1.0.0",
  "description": "The SysVisionz Accordion is a one stop shop for both a typical accordion type component and for a special table row pair type accordion.",
  "author": "Colin Brennan (sysvisionz)",
  "keywords": [
    "accordion",
    "react",
    "reactjs",
    "component",
    "table"
  ],
  "prepare": "npm run build",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
